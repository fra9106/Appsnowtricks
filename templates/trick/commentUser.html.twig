{% extends 'base.html.twig' %}
{% block title %}Comment-user{% endblock %}
{% block body %}
<div class="col-12 mb-4"><br><br>
    <h1 class="text-center">{{user.pseudo}} comments : {{ user.comments|length}} comments</h1><br><br>
</div>
<div class="row">
    {% for comment in user.comments %}
    <div class="card">
        <div class="card-content">
            {{comment.content}}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}